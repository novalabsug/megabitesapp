                <a href="/about" class="nav-link">About</a>
            </li>
            <% if(user) { %>
                <li class="nav-items">
                    <a href="/logout" class="nav-link btn">Log Out</a>
                </li>
                <% } else { %>
                    <li class="nav-items">
                        <a href="/signup" class="nav-link btn">Sign Up</a>
                    </li>
                    <% } %>
