            <div class="user-profile">
                <div class="user-profile-hdr">
                    <i class="lni lni-close" id="close-user-profile"></i>
                </div>
                <div class="user-profile-menu">
                    <a id="username"></a>
                    <div class="wr">
                        <p class="username" hidden>
                            <%= user.name %>
                        </p>
                        <p class="email">
                            <%= user.email %>
                        </p>
                        <a href="/profile" class="btn">Edit Profile</a>
                    </div>
                </div>
            </div>
            <% } %>
